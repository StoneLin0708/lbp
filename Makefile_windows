#test
INC = -I D:\coding\library\opencv\build_mingw4.7.1\include
LIB = -L D:\coding\library\opencv\build_mingw4.7.1\x86\mingw\lib -l opencv_core2410 -l opencv_highgui2410 -l opencv_ml2410 -l opencv_imgproc2410 -l opencv_objdetect2410
FLAGS = -O3 -Wall -ansi

OBJS	= test.o multiImg.o lbpFeature.o lbpFeatureSvm.o detectMultiScale.o
test:${OBJS}
	g++  ${FLAGS} ${INC}  ${OBJS} -o test ${LIB}
test.o:test.cpp lbpFeatureSvm.h
	g++ -c ${FLAGS} ${INC} ${LIB} test.cpp lbpFeatureSvm.h
multiImg.o:multiImg.cpp multiImg.h
	g++ -c ${FLAGS} ${INC} ${LIB} multiImg.cpp multiImg.h
lbpFeature.o:lbpFeature.cpp lbpFeature.h multiImg.h
	g++ -c ${FLAGS} ${INC} ${LIB} lbpFeature.cpp lbpFeature.h multiImg.h
lbpFeatureSvm.o:lbpFeatureSvm.cpp lbpFeatureSvm.h multiImg.h
	g++ -c ${FLAGS} ${INC} ${LIB} lbpFeatureSvm.cpp lbpFeatureSvm.h multiImg.h
detectMultiScale.o:detectMultiScale.cpp lbpFeatureSvm.h
	g++ -c ${FLAGS} ${INC} ${LIB} detectMultiScale.cpp lbpFeatureSvm.h

clean:
	del ${OBJS}